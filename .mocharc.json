{
  "extension": ["ts"],
  "require": ["ts-node/register", "dotenv/config"],
  "timeout": 20000,
  "_retries": 1,
  "exit": true,
  "bail": false,
  "_parallel": true,
  "_jobs": 3,
  "reporter": "node_modules/mochawesome",
  "reporter-option": [
    "overwrite=false",
    "showPassed=true",
    "json=false",
    "quiet=true",
    "reportDir=reports",
    "autoOpen=true",
    "showSkipped=true",
    "timestamp=yyyy-mm-dd'T'HH:MM:ss",
    "reportFilename=report",
    "reportTitle=Test Report",
    "reportPageTitle=Test Report"
  ]
}
